@ 01,28 SAY &INVERSO
SET COLOR TO W/N
OPCAO="S"
@ 06,19 TO 13,67
@ 07,20 SAY "NOME      :"
@ 08,20 SAY "ENDERECO  :"
@ 09,20 SAY "CIDADE    :"
@ 10,20 SAY "CEP       :"
@ 11,20 SAY "ESTADO    :"
@ 12,20 SAY "TELEFONE  :"
DO WHILE OPCAO="S"
   NOME2=SPACE(25)
   ENDERECO2=SPACE(35)
   CIDADE2=SPACE(18)
   CEP2=SPACE(09)
   ESTADO2=SPACE(02)
   TELEFONE2=SPACE(12)
   @ 23,29 SAY "PREENCHER CAMPOS? " GET OPCAO PICTURE "!"
   READ
   @ 23,00 CLEAR
   IF OPCAO="S"
      @ 07,31 GET NOME2
      @ 08,31 GET ENDERECO2
      @ 09,31 GET CIDADE2
      @ 10,31 GET CEP2
      @ 11,31 GET ESTADO2
      @ 12,31 GET TELEFONE2
      READ
      APPEND BLANK
      REPLACE NOME WITH NOME2
      REPLACE ENDERECO WITH ENDERECO2
      REPLACE CIDADE WITH CIDADE2
      REPLACE CEP WITH CEP2
      REPLACE ESTADO WITH ESTADO2
      REPLACE TELEFONE WITH TELEFONE2
   ENDIF
   @ 07,31 CLEAR TO 12,66
ENDDO
DO AGENDA
RETURN
